<Window x:Class="LongdoCardsPOS.TicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LongdoCardsPOS"
        mc:Ignorable="d"
        Title="Ticket" Height="160" Width="320" FontSize="24" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Amount:"/>
        <TextBox x:Name="AmountBox" Grid.Column="1" VerticalAlignment="Top" />
        <Button x:Name="PrintButton" Grid.Row="4" Grid.Column="1" Content="Print" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Click="PrintButton_Click"/>

    </Grid>
</Window>
